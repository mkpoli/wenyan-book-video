{
  "name": "renderer",
  "version": "1.0.0",
  "description": "My Remotion video",
  "repository": {},
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "dependencies": {
    "@remotion/cli": "4.0.375",
    "@remotion/tailwind-v4": "4.0.375",
    "@remotion/zod-types": "4.0.375",
    "music-metadata": "^11.10.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "remotion": "4.0.375",
    "tailwindcss": "4.1.17",
    "transcription-utils": "workspace:*",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@remotion/eslint-config-flat": "4.0.375",
    "@types/react": "19.2.4",
    "@types/web": "0.0.294",
    "chokidar-cli": "^3.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "@types/bun": "latest"
  },
  "scripts": {
    "dev": "remotion studio src/index.ts",
    "build": "remotion bundle",
    "upgrade": "remotion upgrade",
    "lint": "eslint src && tsc",
    "generate-segments": "bun run scripts/generate-segments.ts",
    "watch:segments": "chokidar \"public/segments/**/*.txt\" \"public/audios/**/*.mp3\" \"public/translations/**/*.txt\" \"public/transcripts/**/*.txt\" -c \"bun run scripts/generate-segments.ts\"",
    "render:chapter": "bun run scripts/render-chapter.ts",
    "render:outro": "remotion render Outro --props '{ \"chapterNumber\": 1 }' out/outro.mp4",
    "render:chapter1": "bun run render:chapter -- 1",
    "render:chapter2": "bun run render:chapter -- 2",
    "render:chapter3": "bun run render:chapter -- 3",
    "render:chapter4": "bun run render:chapter -- 4",
    "render:chapter5": "bun run render:chapter -- 5",
    "render:chapter6": "bun run render:chapter -- 6",
    "render:chapter7": "bun run render:chapter -- 7",
    "render:chapter8": "bun run render:chapter -- 8",
    "render:chapter9": "bun run render:chapter -- 9",
    "render:chapter10": "bun run render:chapter -- 10",
    "render:chapter11": "bun run render:chapter -- 11",
    "render:chapter12": "bun run render:chapter -- 12",
    "render:chapter13": "bun run render:chapter -- 13",
    "render:all": "bun run render:chapter -- 1 && bun run render:chapter -- 2 && bun run render:chapter -- 3 && bun run render:chapter -- 4 && bun run render:chapter -- 5 && bun run render:chapter -- 6 && bun run render:chapter -- 7 && bun run render:chapter -- 8 && bun run render:chapter -- 9 && bun run render:chapter -- 10 && bun run render:chapter -- 11 && bun run render:chapter -- 12 && bun run render:chapter -- 13",
    "thumbnail": "remotion still src/index.ts Thumbnail --frame=60 out/thumbnails/thumbnail.png"
  },
  "sideEffects": [
    "*.css"
  ]
}
