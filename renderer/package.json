{
  "name": "renderer",
  "version": "1.0.0",
  "description": "My Remotion video",
  "repository": {},
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "dependencies": {
    "@remotion/cli": "4.0.374",
    "@remotion/tailwind-v4": "4.0.374",
    "@remotion/zod-types": "4.0.374",
    "music-metadata": "^11.10.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "remotion": "4.0.374",
    "tailwindcss": "4.1.17",
    "transcription-utils": "workspace:*",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@remotion/eslint-config-flat": "4.0.374",
    "@types/react": "19.2.4",
    "@types/web": "0.0.294",
    "chokidar-cli": "^3.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "@types/bun": "latest"
  },
  "scripts": {
    "dev": "remotion studio src/index.ts",
    "build": "remotion bundle",
    "upgrade": "remotion upgrade",
    "lint": "eslint src && tsc",
    "generate-segments": "bun run scripts/generate-segments.ts",
    "watch:segments": "chokidar \"public/segments/**/*.txt\" \"public/audios/**/*.mp3\" \"public/translations/**/*.txt\" \"public/transcripts/**/*.txt\" -c \"bun run scripts/generate-segments.ts\"",
    "render:chapter1": "remotion render Chapter1 --props '{ \"chapterNumber\": 1 }' out/chapter1.mp4",
    "render:chapter2": "remotion render Chapter2 --props '{ \"chapterNumber\": 2 }' out/chapter2.mp4",
    "render:chapter3": "remotion render Chapter3 --props '{ \"chapterNumber\": 3 }' out/chapter3.mp4",
    "render:chapter4": "remotion render Chapter4 --props '{ \"chapterNumber\": 4 }' out/chapter4.mp4",
    "render:chapter5": "remotion render Chapter5 --props '{ \"chapterNumber\": 5 }' out/chapter5.mp4",
    "render:chapter6": "remotion render Chapter6 --props '{ \"chapterNumber\": 6 }' out/chapter6.mp4",
    "render:chapter7": "remotion render Chapter7 --props '{ \"chapterNumber\": 7 }' out/chapter7.mp4",
    "render:chapter8": "remotion render Chapter8 --props '{ \"chapterNumber\": 8 }' out/chapter8.mp4",
    "render:chapter9": "remotion render Chapter9 --props '{ \"chapterNumber\": 9 }' out/chapter9.mp4",
    "render:chapter10": "remotion render Chapter10 --props '{ \"chapterNumber\": 10 }' out/chapter10.mp4",
    "render:chapter11": "remotion render Chapter11 --props '{ \"chapterNumber\": 11 }' out/chapter11.mp4",
    "render:chapter12": "remotion render Chapter12 --props '{ \"chapterNumber\": 12 }' out/chapter12.mp4",
    "render:chapter13": "remotion render Chapter13 --props '{ \"chapterNumber\": 13 }' out/chapter13.mp4",
    "render:all": "npm run render:chapter1 && npm run render:chapter2 && npm run render:chapter3 && npm run render:chapter4 && npm run render:chapter5 && npm run render:chapter6 && npm run render:chapter7 && npm run render:chapter8 && npm run render:chapter9 && npm run render:chapter10 && npm run render:chapter11 && npm run render:chapter12 && npm run render:chapter13",
    "thumbnail": "remotion still src/index.ts Thumbnail --frame=60 out/thumbnails/thumbnail.png"
  },
  "sideEffects": [
    "*.css"
  ]
}
